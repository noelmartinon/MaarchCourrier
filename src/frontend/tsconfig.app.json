{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "../../apps/maarch_entreprise/",
    "paths": {
      "@appRoot/*": [
        "../../src/frontend/app/*"
      ],
      "@service/*": [
        "../../src/frontend/service/*"
      ]
    }
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "../../src/frontend/**/*.d.ts"
  ],
  "exclude": [
    "../../src/**/*.spec.ts"
  ]
}
